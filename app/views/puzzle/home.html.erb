<% provide :title, "Welcome to Sudoku Solver!" %>
<h1>Welcome to Sudoku Solver!</h1>
<h2>Please enter your puzzle.</h2>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
    <%= form_tag solve_path do %>
      <div class="puzzle">
        <% 9.times do |i| %>
            <div class="row">
              <% 9.times do |j| %>
                <% @value = @puzzle.output[i*9+j] %>
                <% @value = "" if @value == "0" %>
                <div class="cell"><%= text_field_tag "cells[#{i*9+j}]", @value %></div>
              <% end %>
            </div>
        <% end %>
      </div>
      <%= submit_tag "Solve", class: "btn btn-large btn-primary" %>
    <% end %>
</div>